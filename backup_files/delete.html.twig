{% extends "layout.html.twig" %}



{% block questionnaire_body %}

    <h2>Supprimer une question</h2>

    <p>
        Etes-vous certain de vouloir supprimer cette question ?
    </p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path('question_delete', {'id': question.id}) }}" method="post">
        <a href="{{ path('question_view', {'id': question.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la question
        </a>
        {# Ici j'ai écrit le bouton de soumission à la main #}
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}
    </form>

{% endblock %}