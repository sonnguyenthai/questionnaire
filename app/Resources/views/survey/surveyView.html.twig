{% extends "base.html.twig" %}

{% block page_content_title %} Results of survey {{ survey.id }}{% endblock %}

{% block content %}
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th> Respondent ID</th>
                <th>Respondent Name</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            {% for res in survey.respondents %}
                <tr>
                    <td>
                        {{ res.id }}
                    </td>
                    <td>
                        <a href="{{ path('survey_single_result', {'id':survey.id, 'respondent_id': res.id}) }}" style="text-decoration: none">
                            {{ res.name }}
                        </a>
                    </td>
                    <td>
                        {{ res.timestamp|date('d-m-Y H:i') }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="form-group">
        <a href="{{ path('survey_export', {'id': survey.id}) }}" class="btn btn-primary">Export CSV</a>
        <a href="{{ path('list_surveys') }}" class="btn btn-danger">Retour</a>
    </div>
{% endblock %}