{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    - Mot de Passe
{% endblock %}

{% block page_content_title %}
    Changement de mot de passe
{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="jumbotron">
            {{ form_start ( form , { 'attr': { 'class': 'fos_user_change_password' } } ) }}
            <p>
                Mot de passe (actuel) {{ form_widget(form.current_password , {'attr': {'class': 'form-control'}})  }}
            </p>
            <p>
                Nouveau mot de passe {{ form_widget ( form.plainPassword.first, {'attr': {'class': 'form-control'}} ) }}
            </p>
            <p>
                Répéter le nouveau mot de passe {{ form_widget( form.plainPassword.second, {'attr': {'class': 'form-control'}} ) }}
            </p>
            <button type="submit" class="btn btn-lg btn-primary">
                Enregistrer
            </button>
            <a href="{{ path('user_profile_show') }}" class="btn btn-lg btn-danger">
                Retour
            </a>
            {{ form_end ( form ) }}
        </div>
    </div>
{% endblock %}